rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Pre-launch email collection
    match /pre-launch/{document} {
      // Allow anyone to create new email signups
      allow create: if request.resource.data.email is string
                    && request.resource.data.email.matches('.*@.*\\..*')
                    && request.resource.data.keys().hasAll(['email', 'timestamp'])
                    && (!request.resource.data.keys().hasAny(['city']) || request.resource.data.city is string || request.resource.data.city == null);

      // Only authenticated admins can read/update/delete
      allow read, update, delete: if false;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
